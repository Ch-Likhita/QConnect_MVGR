rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for Questions and Answers
    match /questions/{questionId} {
      allow read: if true; // Anyone can read questions
      
      match /answers/{answerId} {
        allow read: if true; // Anyone can read answers
        
        // This is the part you were likely missing:
        // Allow users to check if they have personally liked an answer
        match /likes/{userId} {
          allow read: if request.auth != null && request.auth.uid == userId;
          // Note: Create/Delete is handled by the Cloud Function (Admin), 
          // so we don't need 'allow write' here.
        }
      }
    }
  }
}
